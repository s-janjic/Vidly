@model IEnumerable<Vidly.Web.Models.Customer>

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table	table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(c.Name, "Edit", "Customers", new { id = c.Id }, null)
                </td>
                <td>
                    @c.MembershipType.Name
                </td>
            </tr>
        }
        </tbody>
    </table>
}
